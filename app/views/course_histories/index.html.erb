<p id="notice"><%= notice %></p>

<h1>Course Histories</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Course description</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_histories.each do |course_history| %>
      <tr>
        <td><%= course_history.student %></td>
        <td><%= course_history.course_description %></td>
        <td><%= course_history.grade %></td>
        <td><%= link_to 'Show', course_history %></td>
        <td><%= link_to 'Edit', edit_course_history_path(course_history) %></td>
        <td><%= link_to 'Destroy', course_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

