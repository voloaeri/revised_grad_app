<!-- SEARCH RESULTS CONTAINER BEGINS -->
<div class="container">
  <h2 id="searchResults"> Search Results</h2>
  <table class="stable srow" id="searcherResults">


    <tbody id="resultsTable">
    <!-- HEADER ROW -->
    <tr class="stable srow" id="headerRow">
      <td class="stable">Name</td>
      <td class="stable">PID</td>
      <td class="stable">Research Area</td>
      <td class="stable">Advisor</td>
      <td></td>
      <td></td>
    </tr>
    <!-- ROWS LOADED FROM DATABASE -->
    <% x = 0 %>
    <% @students.each do |student| %>
        <tr class="stable srow searchResult" id="<%= (x % 2 == 0) ? 'evenRow' : 'oddRow' %>">
          <td class="stable"><%= link_to student.firstName + " " + student.lastName,  edit_student_path(student) %></td>
          <td class="stable"><%= link_to student.PID,  edit_student_path(student) %></td>
          <td class="stable"><%= student.researchArea %></td>
          <td class="stable"><%= student.advisor %></td>
          <td class="stable"><%= link_to 'Student View', student %></td>
          <td class="stable"><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% x += 1 %>
    <% end %>
    </tbody>
  </table>
</div>
<!-- SEARCH RESULTS CONTAINER ENDS -->