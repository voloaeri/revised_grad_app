$(".alerts").html("");

if(<%= @nameError %>){
  $(".alerts").append("<div class='alert alert-danger'> One or both of your name fields have errors. </div>");
}
if(<%= @pidError %>){
  $(".alerts").append("<div class='alert alert-danger'> Please enter a valid 9 digits pid. </div>");
}


if(<%= @pidDup %>){
    $(".alerts").append("<div class='alert alert-danger'> Looks like a that PID is already associated with another student! </div>");
}

if(<%= @success %>){
  $(".alerts").append("<div class='alert alert-success'> Student was successfully created </div>");
}